<Alloy>
	<Window class="container" modal="true"  navBarHidden="false"  title="Manual Trip Entry" id="win">
		    <View id="header">
		    	<Label id="lblHeading" text="Manual Trip Entry" />
		      <Button title="Close" id="closeBtn" onClick="closeWindow" />
            </View>
            
            <TableView id="tableCreate" class="tableview-form">
				<TableViewSection>
	
					<TableViewRow height="70">
						<Label class="label-H5" textAlign="center" left="10" right="10">
							Enter in a trip details manually. The distance value should be entered in whatever has been set by default in your settings - either miles or kilometers. 
						</Label>
					</TableViewRow>
	
					<Widget src="ti.ux.forms.row.timepicker" minDate="" maxDate="" value="" title=" Trip Date" icon="fa-clock-o" platform="ios" id="tripDate"/>							
					<Widget src="ti.ux.forms.row.text" title="" hintText=" Trip Purpose" icon="fa-automobile" id="purpose" />						
					<Widget src="ti.ux.forms.row.text" title="" hintText=" Odometer End" icon="fa-tachometer" id="odoend" />	
					<Widget src="ti.ux.forms.row.text" title="" hintText=" Distance" icon="fa-map-marker" id="distance" />
				
				<TableViewRow height="80">
					<Button id="btnSave" title="Save" />
				</TableViewRow>
				
			</TableViewSection>			
		</TableView> 
		
		
	</Window>
</Alloy>