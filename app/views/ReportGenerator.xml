<Alloy>
	<Window class="container" modal="true"  navBarHidden="false"  title="Create Report" id="win">
		    <View id="header">
		    	<Label id="lblHeading" text="Create Report" />
		      <Button title="Close" id="closeBtn" onClick="closeWindow" />
            </View>
            
            <TableView id="tableCreate" class="tableview-form">
				<TableViewSection>
	
					<TableViewRow height="70">
						<Label class="label-H5" textAlign="center" left="10" right="10">
							TripLogr can automatically backup your Trip data to the Cloud for free if you wish. Cloud backup is necessary if you want to generate PDF trip reports.
						</Label>
					</TableViewRow>
	
					<Widget src="ti.ux.forms.row.timepicker" minDate="" maxDate="" value="" title=" Start Date" icon="fa-clock-o" platform="ios"/>		
					<Widget src="ti.ux.forms.row.timepicker" minDate="" maxDate="" value="" title=" End Date" icon="fa-clock-o" platform="ios"/>
				
				<TableViewRow height="80">
					<Button id="btnCreateReport" title="Create Report" />
				</TableViewRow>
				
			</TableViewSection>			
		</TableView> 
		
		
         <TableView id="tableReport" height="1754" width="1240" visible="false">
         	
         </TableView>
					
	</Window>
</Alloy>